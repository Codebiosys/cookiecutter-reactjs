{
  "name": "{{cookiecutter.project_slug}}",
  "version": "{{cookiecutter.version}}",
  "description": "{{cookiecutter.project_short_description}}",
  "private": true,
  "author": {
    "name" : "{{cookiecutter.author_name}}",
    "email" : "{{cookiecutter.author_email}}",
    "url" : "{{cookiecutter.author_url}}"
  },
  "scripts": {
    "start": "webpack-dev-server --progress --config webpack.dev.js",
    "build": "rimraf ./build/dist && webpack --progress --config webpack.prod.js",
    "tests": "jest --coverage",
    "tests:watch": "jest --coverage --watch",
    "docs": "rimraf ./build/docs && esdoc",
    "docs:watch": "nodemon -L --watch src --exec 'rimraf ./build/docs && esdoc' -e js"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileTransformer.js",
      ".*": "babel-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/cssStub.js"
    },
    "moduleFileExtensions": ["js", "jsx"],
    "moduleDirectories": ["src", "node_modules"],
    "modulePaths": ["src"],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.jsx"
    ],
    "coverageDirectory": "./build/coverage",
    "mapCoverage": true
  },
  "dependencies": {
    "apollo-client": "^1.3.0",
    "graphql": "^0.10.1",
    "graphql-anywhere": "^3.1.0",
    "graphql-tag": "^2.4.2",
    "graphql-tools": "^1.1.0",
    "history": "^4.6.3",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-apollo": "^1.2.0",
    "react-dom": "^15.5.4",
    "react-moment-proptypes": "^1.4.0",
    "react-redux": "^5.0.5",
    "react-responsive": "^1.3.0",
    "react-router": "^4.1.1",
    "react-router-redux": "next",
    "react-tap-event-plugin": "^2.0.1",
    "react-visibility-sensor": "^3.10.0",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "apollo-test-utils": "^0.3.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-jest": "^20.0.3",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "esdoc": "^1.0.1",
    "esdoc-jsx-plugin": "^1.0.0",
    "esdoc-react-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-react": "^7.1.0",
    "faker": "^4.1.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "istanbul": "^0.4.5",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.5.3",
    "jest-transform-graphql": "^2.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "react-addons-shallow-compare": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "redux-test-utils": "^0.1.2",
    "resolve-url-loader": "^2.1.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.0"
  }
}
